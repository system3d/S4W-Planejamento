.navigation-wrapper
  nav.navbar.navbar-static-top
    form.form-inline(role='form')
      .navbar-form.navbar-left
        .form-group
          span Obra:&nbsp;
          select.form-control.input-sm(ng-options="obra.nome for obra in main.Obras track by obra.id", ng-model="main.obra", ng-change='main.obraChanged()')
        .form-group(ng-show='main.Etapas')
          span Etapa:&nbsp;
          select.form-control.input-sm(ng-options="etapa.codigo for etapa in main.Etapas track by etapa.id", ng-model="main.etapa")
        .form-group(ng-show="main.active !== 'gantt' && main.active !== 'cronograma' ")
          span De:&nbsp;
          bd-datepicker(ng-model='main.date.start', max-date="main.date.end", min-date='false', bd-class="input-sm")
        .form-group(ng-show="main.active !== 'gantt' && main.active !== 'cronograma' ")
          span At√©:&nbsp;
          bd-datepicker(ng-model='main.date.end', max-date="false", min-date='main.date.start', bd-class="input-sm")
        .form-group.button-group
          button.btn.btn-sm.btn-primary(ng-click='main.load()', title='Carregar') Carregar
        .form-group.pull-right.gantt-group(ng-show='main.active === "gantt"')
          .pull-right
            button.btn.btn-sm.btn-success(save-gantt,style='margin-right: 5px',title='Salvar Cronograma')
              i.fa.fa-floppy-o
              &nbsp; Salvar
            button.btn.btn-sm.btn-primary(gantt-toggle,style='margin-right: 5px',title='Alternar Realizados')
              i.fa.fa-caret-square-o-right
            button.btn.btn-sm.btn-primary(zoom-out,style='margin-right: 5px')
              i.fa.fa-search-plus
            button.btn.btn-sm.btn-primary(zoom-in)
              i.fa.fa-search-minus
          
